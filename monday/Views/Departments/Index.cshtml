@model IEnumerable<mondayWebApp.Models.Department>

@{
    ViewData["Title"] = "Działy";
}

<h1>Działy</h1>

<p>
    <a asp-action="Create">Utwórz nowy dział</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nazwa działu
            </th>
            <th>
                Kierownik działu
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentManager.EmployeeNameSurname)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DepartmentID">Edytuj</a> |
                <a asp-action="Details" asp-route-id="@item.DepartmentID">Szczegóły</a> |
                <a asp-action="Delete" asp-route-id="@item.DepartmentID">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
