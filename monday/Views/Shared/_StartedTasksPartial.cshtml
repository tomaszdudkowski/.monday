@model IEnumerable<mondayWebApp.Models.ViewModels.ProjectTaskViewModel>

    <h1 class="text-primary">Zadania</h1>
    <div>
        <table class="table table-dark">
            <thead>
                <tr>
                    <th></th>
                    <th>Data zakończenia</th>
                    <th>Utworzone przez</th>
                    <th>Tytuł</th>
                </tr>
            </thead>
            <tbody>
                @foreach (mondayWebApp.Models.ViewModels.ProjectTaskViewModel projectTask in Model)
                {
                    @if (projectTask.IsEnd == false)
                    {
                        <tr>
                            <td><a class="btn btn-success btn-sm" asp-controller="Home" asp-action="EndTask" asp-route-id="@projectTask.TaskID">Zakończ zadanie</a></td>
                            <td>@projectTask.TaskDeadline</td>
                            <td>@projectTask.TaskCreatedBy</td>
                            <td>@projectTask.TaskName</td>
                            <td><a class="btn btn-info btn-sm">Szczegóły</a></td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>